<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_shimmer"
        android:elevation="4dp"
        android:backgroundTint="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="41dp"
                android:layout_height="32dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_7sdp"
                android:src="@drawable/notifpopup" />

            <TextView
                android:id="@+id/tv_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:maxLines="2"
                android:padding="2dp"
                android:text="Penyluhan Pengelolaan Limbah Organik Rumah Tangga Oleh Dinas Kesehatan"
                android:textColor="@android:color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_43sdp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:padding="2dp"
                android:text="25 Desember 2021"
                android:textColor="@android:color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_waktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="20"
                android:drawablePadding="5dp"
                android:padding="2dp"
                android:text="Waktu : 09.00 - 11.00 WIB"
                android:textColor="@android:color/black"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="10sp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_tempat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id"
                android:textSize="10sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_detaiil"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>