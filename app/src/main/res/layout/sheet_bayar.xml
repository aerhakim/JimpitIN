<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:id="@+id/bottomsheet"
    android:background="@drawable/bg_rounded_atas"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Bayar Tagihan"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#1a1a1a" />

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:text="Jumlah Tagihan : Rp 10.000"
        android:textColor="#666666" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Pilih Metode Pembayaran"
            android:textColor="#1a1a1a" />
            <View
                android:layout_width="300dp"
                android:layout_height="0.6dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="#CDCDCD"
                android:visibility="visible" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_margin="7dp"
                android:drawableLeft="@drawable/ic_dana"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=" DANA" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_margin="7dp"
                android:drawableLeft="@drawable/ic_bri"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=" M-Banking BRI" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_margin="7dp"
                android:drawableLeft="@drawable/ic_gopey"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text=" GO-PAY" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_margin="8dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/batal"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:backgroundTint="#DADADA"
            android:text="Batal"
            android:textAllCaps="false"
            android:textColor="@color/black" />
        <Button
            android:id="@+id/bayar"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Bayar"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>